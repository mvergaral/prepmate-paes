              {"key": "Authorization", "value": "Bearer {{token}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "url": {"raw": "{{base_url}}/profile", "host": ["{{base_url}}"], "path": ["profile"]},
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Nuevo Nombre\"\n}"
            }
          },
          "response": []
