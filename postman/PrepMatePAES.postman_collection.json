            "method": "POST",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "url": {"raw": "{{base_url}}/profile", "host": ["{{base_url}}"], "path": ["profile"]},
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Test\",\n  \"rut\": \"1-9\",\n  \"age\": 18,\n  \"colegio\": \"Colegio X\",\n  \"comuna\": \"Comuna Y\",\n  \"region\": \"Region Z\"\n}"
            }
          },
          "response": []
        },
        {
          "name": "Update Profile",
